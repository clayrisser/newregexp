{
  "name": "newregexp",
  "version": "1.0.1",
  "description": "Dynamically create regular expressions from strings",
  "homepage": "https://github.com/codejamninja/newregexp",
  "author": {
    "name": "Jam Risser",
    "email": "jam@codejam.ninja",
    "url": "https://jam.codejam.ninja"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run test && babel src -d lib",
    "clean": "rm -rf lib",
    "format": "prettier --write ./src/**/*.js",
    "lint": "npm run format && eslint ./",
    "lint:fix": "npm run format && eslint --fix ./",
    "prepublish": "npm run clean && npm run build",
    "test": "npm run lint && jest"
  },
  "dependencies": {
    "babel-core": "7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-preset-everything": "^0.1.2",
    "eslint": "^5.8.0",
    "eslint-config-jam": "^0.1.6",
    "eslint-plugin-jest": "^21.26.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3"
  },
  "license": "MIT",
  "repository": "https://github.com/codejamninja/newregexp",
  "engines": {
    "node": ">= 4.0.0"
  },
  "eslintIgnore": [
    "lib"
  ],
  "jest": {
    "testMatch": [
      "**/tests/**/[^_]*.js"
    ],
    "verbose": true
  }
}
